# ===========================================
# TXINTXA - Configurações de Ambiente
# ===========================================

# Ambiente
NODE_ENV=development
PORT=5000

# MongoDB
MONGODB_URI=mongodb://localhost:27017/txintxa
MONGODB_URI_PROD=mongodb+srv://user:password@cluster.mongodb.net/txintxa

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Criptografia
ENCRYPTION_KEY=your-32-character-encryption-key

# PayPal (Sandbox)
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox
PAYPAL_SANDBOX_URL=https://api-m.sandbox.paypal.com
PAYPAL_LIVE_URL=https://api-m.paypal.com

# M-Pesa Vodacom Moçambique
MPESA_API_KEY=your-mpesa-api-key
MPESA_PUBLIC_KEY=your-mpesa-public-key
MPESA_SERVICE_PROVIDER_CODE=your-service-provider-code
MPESA_BASE_URL=https://api.sandbox.vm.co.mz
MPESA_ORIGIN=developer.mpesa.vm.co.mz

# Exchange Rate API
EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key
EXCHANGE_RATE_API_URL=https://v6.exchangerate-api.com/v6

# Twilio (SMS/OTP)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid (Email)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@txintxa.co.mz
SENDGRID_FROM_NAME=Txintxa

# Taxa de Transação
TRANSACTION_FEE_PERCENTAGE=2
TRANSACTION_FEE_FIXED=0.50

# Limites
DAILY_LIMIT_USD=500
WEEKLY_LIMIT_USD=2000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Frontend URL (para CORS)
FRONTEND_URL=http://localhost:5173

# Logs
LOG_LEVEL=debug
